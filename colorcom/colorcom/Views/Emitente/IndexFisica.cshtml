@model IEnumerable<colorcom.Models.Emitente.emitente>
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <small class="card-title">Emitente > <b>Pessoa Física</b></small>
                    </div>
                    <div class="card-body">
                        <p>
                            @Html.ActionLink("Novo Emitente", "New", "Emitente", null, new { @class = "btn btn-secondary btn-sm" })
                        </p>
                        <table class="table table-striped table-bordered table-sm data-table">
                            <tr>
                                <th>Editar</th>
                                <th>Status</th>
                                <th>Código</th>
                                <th>Nome</th>
                                <th>CPF</th>
                                <th>Celular</th>
                                <th>E-mail</th>
                                <th>Alt. Status</th>
                                <th>Remover</th>
                            </tr>
                            @foreach (var emitente in Model)
                            {
                                <tr>
                                    <td class="fit-column">
                                        @Html.ActionLink("Editar", "Edit", "Emitente", new { id = emitente.em_cod }, new { @class = "btn btn-primary btn-sm" })
                                    </td>
                                    <td class="fit-column">
                                        @if (emitente.em_status == true)
                                        {
                                            <span class="badge badge-success">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Inativo</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => emitente.em_cod)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => emitente.em_nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => emitente.em_documento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => emitente.em_celular)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => emitente.em_email)
                                    </td>
                                    <td class="fit-column">
                                        @if (emitente.em_status == true)
                                        {
                                            using (Html.BeginForm("AtivarInativar", "Emitente", new { id = emitente.em_cod, tipoEmitente = emitente.em_te_cod }))
                                            {
                                                <input type="submit" class="btn btn-outline-warning btn-sm" value="Inativar" onclick="return confirm('Inativar Cliente @emitente.em_nome?')" />
                                            }
                                        }
                                        else
                                        {
                                            using (Html.BeginForm("AtivarInativar", "Emitente", new { id = emitente.em_cod, tipoEmitente = emitente.em_te_cod }))
                                            {
                                                <input type="submit" class="btn btn-outline-success btn-sm" value="Ativar" onclick="return confirm('Ativar Cliente @emitente.em_nome?')" />
                                            }
                                        }
                                    </td>
                                    <td class="fit-column">
                                        @using (Html.BeginForm("Delete", "Emitente", new { id = emitente.em_cod }))
                                        {
                                            <input type="submit" class="btn  btn-outline-danger btn-sm" value="Excluir" onclick="return confirm('Remover Cliente @emitente.em_nome?')" />
                                        }
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
